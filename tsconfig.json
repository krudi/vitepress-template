{
    "include": ["./*.ts", "./docs/.vitepress/**/*.ts", "./docs/.vitepress/**/*.vue"],
    "exclude": ["dist", "node_modules"],
    "compilerOptions": {
        "incremental": false,
        "target": "ESNext",
        "lib": ["DOM", "ESNext"],
        "module": "esnext",
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "~/*": ["./docs/*"],
        },
        "types": ["vite/client", "vitepress"],
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "skipLibCheck": true
    }
}
