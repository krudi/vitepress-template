{
  "extends": [
    "config:base",
    ":disableDependencyDashboard"
  ],
  "baseBranches": ["main"],
  "automerge": true,
  "packageRules": [
    {
      "updateTypes": [
        "major"
      ],
      "enabled": true,
      "automerge": false
    }
  ],
  "automergeType": "pr",
  "pruneBranchAfterAutomerge": true,
  "prCreation": "immediate",
  "includePaths": [
    "./package.json"
  ]
}
