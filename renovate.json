{
  "extends": [
    "config:base",
    ":disableDependencyDashboard"
  ],
  "includePaths": [
    "package.json"
  ],
  "semanticCommits": true,
  "rangeStrategy": "bump",
  "rebaseLabel": "rebase",
  "rebaseWhen": "auto",
  "schedule": [
    "after 2am and before 3am on sunday"
  ],  
  "packageRules": [
    {
      "updateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true,
      "automergeType": "branch" 
    },
    {
      "updateTypes": [
        "major"
      ],
      "automerge": false
    },
    {
      "depTypeList": [
        "devDependencies"
      ],
      "automerge": true
    }
  ],
  "platformAutomerge": true
}
